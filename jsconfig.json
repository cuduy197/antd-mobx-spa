{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "src/*": ["./src/*"],
            "~/*": ["./src/pages/*"],
            "pages/*": ["./src/*"],
            "#/*": ["./src/components/*"],
            "components/*": ["./src/*"],
            "^/*": ["./src/assets/*"],
            "assets/*": ["./src/*"]
        },
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "**/node_modules/*", "dist", "src/assets", "public"],
    "include": ["src/**/*"]
}